<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsFragment"
    android:orientation="vertical"
    android:background="@drawable/question_frag_bg"
    android:layout_marginBottom="70dp">


    <TextView
        android:id="@+id/tv_add_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Question"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/lavender"
        android:background="@drawable/questions_border"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:drawableEnd="@drawable/add_category_dialog"
        android:paddingStart="80dp"
        android:paddingEnd="70dp"/>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_bar_color"
        android:progress="0"
        android:visibility="gone"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_add_question"
        android:id="@+id/recyQuestions"/>



</RelativeLayout>