<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment"
    android:background="@drawable/settings_bg"
    android:layout_marginBottom="55dp"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lavender_border"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="SETTINGS"
                android:gravity="center"
                android:textSize="25dp"
                android:background="@drawable/lavender_border"
                android:textColor="@color/white"
                android:backgroundTint="@color/lavender"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lavender_border"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Change Personal Details"
                android:gravity="center"
                android:textSize="25dp"
                android:background="@drawable/lavender_border"
                android:textColor="@color/white"
                android:backgroundTint="@color/lavender"/>

            <EditText
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lavender_border"
                android:drawableStart="@drawable/person_icon"
                android:drawablePadding="8dp"
                android:hint="Name"
                android:padding="8dp"
                android:textColor="@color/lavender"
                android:textColorHint="@color/lavender"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/profile_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lavender_border"
                android:drawableStart="@drawable/email_address_icon"
                android:drawablePadding="8dp"
                android:hint="Registerd Email"
                android:padding="8dp"
                android:textColor="@color/lavender"
                android:textColorHint="@color/lavender"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/changepassRedirectText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/lavender_border"
                android:drawableStart="@drawable/shield_lock_black_icon"
                android:padding="12dp"
                android:text="Change Password"
                android:textAlignment="textStart"
                android:textColor="@color/lavender"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/profile_save_changes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:background="@drawable/lavender_border"
                android:backgroundTint="@color/lavender"
                android:padding="5dp"
                android:text="Save Changes"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/progress_bar_color"
                android:progress="0"
                android:visibility="gone"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>